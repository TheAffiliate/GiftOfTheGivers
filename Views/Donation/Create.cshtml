@model GiftOfTheGivers_ST10239864.Models.Donation
<h2>Make a Donation</h2>
<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="ResourceType"></label>
        <input asp-for="ResourceType" class="form-control" />
        <span asp-validation-for="ResourceType" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <button class="btn btn-orange">Donate</button>
</form>
