@model IEnumerable<GiftOfTheGivers_ST10239864.Models.IncidentReport>
@{
    ViewData["Title"] = "Incidents";
}
<h2>Reported Incidents</h2>
<p><a class="btn btn-orange" asp-action="Create">Report Incident</a></p>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<table class="table table-striped">
    <thead><tr><th>Title</th><th>Location</th><th>Date</th><th></th></tr></thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Location</td>
                <td>@item.ReportedAt.ToLocalTime().ToString("g")</td>
                <td><a asp-action="Details" asp-route-id="@item.Id">Details</a></td>
            </tr>
        }
    </tbody>
</table>
