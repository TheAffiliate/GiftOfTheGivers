@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gift Of The Givers</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="navbar navbar-expand-lg navbar-dark bg-deepgreen">
        <div class="container">
            <a class="navbar-brand text-orange" asp-controller="Home" asp-action="Index">Gift Of The Givers</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Programs">Programs</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Incident" asp-action="Index">Incidents</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Donation" asp-action="Index">Donations</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Volunteer" asp-action="Index">Volunteers</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a></li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </header>

    <div class="container mt-5 mb-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-deepgreen text-white text-center py-3">
        <div class="container">
            <div class="row">
                <div class="col-md-8 text-start">
                    <strong>Gift Of The Givers</strong> — Delivering emergency relief, community development and sustainable impact.
                </div>
                <div class="col-md-4 text-end">
                    <small>© @DateTime.Now.Year - Gift Of The Givers</small>
                </div>
            </div>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
